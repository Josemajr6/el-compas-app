<?xml version="1.0" encoding="utf-8"?>
<!--
    ═══════════════════════════════════════════════════════════════
    ITEM PERSONAJE
    ───────────────────────────────────────────────────────────────
    MODO FOTO — controla cómo se ve la imagen con el atributo:
      android:scaleType en iv_personaje

      · centerCrop   → rellena toda la imagen, puede recortar
      · fitCenter    → se ve la foto entera, puede dejar huecos
      · fitXY        → estira para rellenar, puede deformar

    Cambia el valor de scaleType según prefieras.
    ═══════════════════════════════════════════════════════════════
-->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="18dp"
    app:cardBackgroundColor="#FDFBF7"
    app:cardCornerRadius="22dp"
    app:cardElevation="5dp"
    app:strokeColor="@color/yellow_sun"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ── Imagen del personaje ── -->
        <!--
            scaleType="centerCrop"  → rellena y hace zoom (recomendado para fotos)
            scaleType="fitCenter"   → ve la foto entera sin recorte
            Cambia este valor según lo que necesites.
        -->
        <ImageView
            android:id="@+id/iv_personaje"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Overlay degradado suave sobre la imagen -->
        <View
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:background="@drawable/bg_image_overlay"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ── Bloque de texto ── -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/iv_personaje"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Línea decorativa de color -->
            <View
                android:layout_width="36dp"
                android:layout_height="3dp"
                android:background="@color/sage_green"
                android:layout_marginBottom="10dp" />

            <!-- Nombre del personaje -->
            <TextView
                android:id="@+id/tv_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personaje_nombre_ejemplo"
                android:textColor="@color/text_dark_brown"
                android:textSize="20sp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:lineSpacingMultiplier="1.1" />

            <!-- Época / lugar -->
            <TextView
                android:id="@+id/tv_epoca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personaje_epoca_ejemplo"
                android:textColor="@color/sage_green"
                android:textSize="11.5sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.07"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="10dp" />

            <!-- Descripción -->
            <TextView
                android:id="@+id/tv_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/personaje_desc_ejemplo"
                android:textColor="#6B5050"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.6"
                android:fontFamily="sans-serif" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
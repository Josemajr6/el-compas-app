<?xml version="1.0" encoding="utf-8"?>
<!--
    ═══════════════════════════════════════════════════════════════
    FRAGMENT VÍDEOS - "Andalucía en Vídeo"
    Reproductor ExoPlayer con controles multimedia nativos.
    Sigue la estética de El Compás (colores, tipografía, cards).
    ═══════════════════════════════════════════════════════════════
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- ════════════════════════════════════════
         HEADER (misma estructura que Personajes)
         ════════════════════════════════════════ -->
    <LinearLayout
        android:id="@+id/header_videos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_hero_header"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="44dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:src="@drawable/logo"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/icono"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:alpha="0.70" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/videos_titulo"
            android:textColor="#FDFBF7"
            android:textSize="24sp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:layout_marginTop="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/videos_subtitulo"
            android:textColor="#C8DDD7"
            android:textSize="12.5sp"
            android:letterSpacing="0.04"
            android:layout_marginTop="3dp" />

    </LinearLayout>

    <!-- Wave divider (igual que en los demás fragmentos) -->
    <ImageView
        android:id="@+id/wave_videos"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_wave_divider"
        android:scaleType="fitXY"
        android:layout_marginTop="-2dp"
        app:layout_constraintTop_toBottomOf="@id/header_videos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ════════════════════════════════════════
         LISTA DE VÍDEOS (RecyclerView)
         ════════════════════════════════════════ -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_videos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="100dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/wave_videos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
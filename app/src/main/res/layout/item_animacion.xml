<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="18dp"
    app:cardBackgroundColor="#FDFBF7"
    app:cardCornerRadius="22dp"
    app:cardElevation="5dp"
    app:strokeColor="@color/yellow_sun"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ── Zona de animación Lottie ── -->
        <FrameLayout
            android:id="@+id/fl_lottie_container"
            android:layout_width="0dp"
            android:layout_height="260dp"
            android:background="@color/albero_cream"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_animacion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_speed="1.0" />

            <TextView
                android:id="@+id/tv_animacion_categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="10dp"
                android:text="@string/anim_categoria_preview"
                android:textColor="#FDFBF7"
                android:textSize="10sp"
                android:textStyle="bold"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@drawable/bg_badge_video" />

        </FrameLayout>

        <!-- ── Bloque de texto ── -->
        <LinearLayout
            android:id="@+id/ll_texto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="14dp"
            android:paddingBottom="6dp"
            app:layout_constraintTop_toBottomOf="@id/fl_lottie_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <View
                android:layout_width="36dp"
                android:layout_height="3dp"
                android:background="@color/sage_green"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/tv_animacion_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/anim_titulo_preview"
                android:textColor="@color/text_dark_brown"
                android:textSize="18sp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:lineSpacingMultiplier="1.1" />

            <TextView
                android:id="@+id/tv_animacion_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/anim_descripcion_preview"
                android:textColor="#6B5050"
                android:textSize="13.5sp"
                android:lineSpacingMultiplier="1.55"
                android:fontFamily="sans-serif"
                android:layout_marginTop="5dp" />

        </LinearLayout>

        <!-- Separador sutil -->
        <View
            android:id="@+id/divider_anim"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/yellow_sun"
            android:alpha="0.8"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/ll_texto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ── Controles: Reiniciar + Play/Pausa ── -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/divider_anim"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">



            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_anim_play_pausa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_pause"
                app:backgroundTint="@color/sage_green"
                app:tint="#FDFBF7"
                app:fabSize="normal"
                app:elevation="4dp"
                android:contentDescription="@string/anim_btn_play_pausa_desc" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
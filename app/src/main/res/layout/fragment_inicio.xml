<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="110dp">

        <!-- ══════════════════════════════════════════════════
             HERO — fondo degradado sage_green, 300dp de alto
             ══════════════════════════════════════════════════ -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/bg_hero_header"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- Círculo decorativo grande, esquina superior derecha -->
            <View
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/bg_circle_decor"
                android:alpha="0.10"
                android:layout_marginTop="-60dp"
                android:layout_marginEnd="-60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Círculo decorativo mediano, izquierda media -->
            <View
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/bg_circle_decor_cream"
                android:alpha="0.15"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.7" />

            <!-- Círculo decorativo pequeño, esquina inferior derecha -->
            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/bg_circle_decor"
                android:alpha="0.08"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="-20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- logo.png centrado, tamaño generoso -->
            <ImageView
                android:id="@+id/iv_logo_hero"
                android:layout_width="0dp"
                android:layout_height="95dp"
                android:src="@drawable/logo"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_hero_subtitulo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintVertical_bias="0.40" />

            <!-- Subtítulo con letra espaciada -->
            <TextView
                android:id="@+id/tv_hero_subtitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inicio_hero_subtitulo"
                android:textColor="#FDFBF7"
                android:textSize="13sp"
                android:letterSpacing="0.10"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="52dp"
                app:layout_constraintTop_toBottomOf="@id/iv_logo_hero"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Wave SVG entre hero y contenido -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:src="@drawable/ic_wave_divider"
            android:scaleType="fitXY"
            android:layout_marginTop="-2dp" />

        <!-- ══════════════════════════════════════════════════
             SECCIÓN BIENVENIDA
             ══════════════════════════════════════════════════ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="6dp">

            <!-- Tag pequeño en mayúsculas -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inicio_seccion_tag"
                android:textColor="@color/sage_green"
                android:textSize="11sp"
                android:letterSpacing="0.18"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="true" />

            <!-- Título línea 1: color dark_brown -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inicio_titulo_linea1"
                android:textColor="@color/text_dark_brown"
                android:textSize="34sp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:lineSpacingMultiplier="1.0"
                android:layout_marginTop="4dp" />

            <!-- Título línea 2: tile_coral para contraste -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inicio_titulo_linea2"
                android:textColor="@color/tile_coral"
                android:textSize="34sp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:lineSpacingMultiplier="1.0" />

            <!-- Línea decorativa -->
            <View
                android:layout_width="44dp"
                android:layout_height="3dp"
                android:background="@color/tile_coral"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp" />

            <!-- Descripción -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/inicio_descripcion"
                android:textColor="#6A5050"
                android:textSize="14.5sp"
                android:lineSpacingMultiplier="1.65"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- ══════════════════════════════════════════════════
             FILA DE ICONOS CULTURALES  (max 26dp, baja res)
             ══════════════════════════════════════════════════ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="22dp"
            android:paddingBottom="4dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageView android:layout_width="26dp" android:layout_height="26dp"
                android:src="@drawable/abanico" android:scaleType="fitCenter"
                android:adjustViewBounds="true" android:layout_marginEnd="16dp"/>

            <ImageView android:layout_width="26dp" android:layout_height="26dp"
                android:src="@drawable/aplausos" android:scaleType="fitCenter"
                android:adjustViewBounds="true" android:layout_marginEnd="16dp"/>

            <ImageView android:layout_width="26dp" android:layout_height="26dp"
                android:src="@drawable/flor" android:scaleType="fitCenter"
                android:adjustViewBounds="true" android:layout_marginEnd="16dp"/>

            <ImageView android:layout_width="26dp" android:layout_height="26dp"
                android:src="@drawable/pomo_guitarra" android:scaleType="fitCenter"
                android:adjustViewBounds="true" android:layout_marginEnd="16dp"/>

            <ImageView android:layout_width="26dp" android:layout_height="26dp"
                android:src="@drawable/maracas" android:scaleType="fitCenter"
                android:adjustViewBounds="true" android:layout_marginEnd="16dp"/>

            <ImageView android:layout_width="26dp" android:layout_height="26dp"
                android:src="@drawable/peineta" android:scaleType="fitCenter"
                android:adjustViewBounds="true" android:layout_marginEnd="16dp"/>

            <ImageView android:layout_width="26dp" android:layout_height="26dp"
                android:src="@drawable/decoracion" android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>

        </LinearLayout>

        <!-- Separador sutil -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yellow_sun"
            android:alpha="0.55"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="4dp" />

        <!-- ══════════════════════════════════════════════════
             GRID 2×2 DE SECCIONES
             ══════════════════════════════════════════════════ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="12dp">

            <!-- Fila 1: Personajes + Vídeos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Card Personajes -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="116dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardBackgroundColor="@color/sage_green"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp"
                    app:strokeWidth="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="14dp">
                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:src="@drawable/personajes"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/card_personajes_titulo"
                            android:textColor="#FDFBF7"
                            android:textSize="12sp"
                            android:fontFamily="serif"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card Vídeos -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="116dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardBackgroundColor="@color/tile_coral"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp"
                    app:strokeWidth="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="14dp">
                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:src="@drawable/videos"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/card_videos_titulo"
                            android:textColor="#FDFBF7"
                            android:textSize="12sp"
                            android:fontFamily="serif"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Fila 2: Sonidos + Animaciones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <!-- Card Sonidos -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="116dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardBackgroundColor="@color/yellow_sun"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp"
                    app:strokeWidth="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="14dp">
                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:src="@drawable/sonidos"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/card_sonidos_titulo"
                            android:textColor="@color/text_dark_brown"
                            android:textSize="12sp"
                            android:fontFamily="serif"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card Animaciones -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="116dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardBackgroundColor="@color/green_light"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp"
                    app:strokeWidth="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="14dp">
                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:src="@drawable/animaciones"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/card_animaciones_titulo"
                            android:textColor="@color/text_dark_brown"
                            android:textSize="12sp"
                            android:fontFamily="serif"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

        <!-- ══════════════════════════════════════════════════
             PULL-QUOTE FINAL con icono.png decorativo
             ══════════════════════════════════════════════════ -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/sage_green"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:padding="24dp">

            <!-- icono.png (sin letras) como watermark decorativo -->
            <ImageView
                android:id="@+id/iv_icono_quote"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/icono"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:alpha="0.45"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Comillas decorativas grandes -->
            <TextView
                android:id="@+id/tv_comillas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#8220;"
                android:textColor="#FDFBF7"
                android:textSize="52sp"
                android:fontFamily="serif"
                android:alpha="0.40"
                android:layout_marginBottom="-24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Cita -->
            <TextView
                android:id="@+id/tv_cita"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/inicio_cita"
                android:textColor="#FDFBF7"
                android:textSize="17sp"
                android:lineSpacingMultiplier="1.5"
                android:fontFamily="serif"
                android:textStyle="italic"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="56dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Línea decorativa bajo la cita -->
            <View
                android:layout_width="32dp"
                android:layout_height="2dp"
                android:background="#FDFBF7"
                android:alpha="0.40"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@id/tv_cita"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</ScrollView>
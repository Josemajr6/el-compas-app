<?xml version="1.0" encoding="utf-8"?>
<!--
    ═══════════════════════════════════════════════════════════════
    ITEM SONIDO — Tarjeta de cada canción
    ───────────────────────────────────────────────────────────────
    Sigue la misma estética que item_personaje.xml e item_video.xml:
      · MaterialCardView con bordes yellow_sun y fondo albero_cream
      · Portada cuadrada a la izquierda
      · Título, artista, categoría + duración a la derecha
      · SeekBar + tiempo actual + botones Play/Pausa y Stop abajo
    ═══════════════════════════════════════════════════════════════
-->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="18dp"
    app:cardBackgroundColor="#FDFBF7"
    app:cardCornerRadius="22dp"
    app:cardElevation="5dp"
    app:strokeColor="@color/yellow_sun"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ── Fila superior: portada + info ── -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Portada cuadrada -->
            <ImageView
                android:id="@+id/iv_portada"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sonidos"
                app:cardCornerRadius="12dp"
                android:background="@drawable/bg_badge_video" />

            <!-- Info de la canción -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="14dp"
                android:paddingEnd="4dp">

                <!-- Línea decorativa -->
                <View
                    android:layout_width="30dp"
                    android:layout_height="3dp"
                    android:background="@color/sage_green"
                    android:layout_marginBottom="8dp" />

                <!--
                    El texto viene del adapter (sonido.getTitulo()).
                    Para cambiar el texto de preview en el editor:
                    STRING: <string name="sonido_titulo_preview">Título de la Canción</string>
                -->
                <TextView
                    android:id="@+id/tv_sonido_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Título de la Canción"
                    android:textColor="@color/text_dark_brown"
                    android:textSize="16sp"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:lineSpacingMultiplier="1.1"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <!--
                    STRING PREVIEW: <string name="sonido_artista_preview">Artista</string>
                -->
                <TextView
                    android:id="@+id/tv_sonido_artista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Artista"
                    android:textColor="@color/sage_green"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="3dp" />

                <!-- Fila categoría + duración -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp">

                    <!--
                        STRING PREVIEW: <string name="sonido_categoria_preview">Flamenco</string>
                    -->
                    <TextView
                        android:id="@+id/tv_sonido_categoria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flamenco"
                        android:textColor="#FDFBF7"
                        android:textSize="10sp"
                        android:fontFamily="sans-serif-medium"
                        android:textAllCaps="true"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:background="@drawable/bg_badge_video" />

                    <!--
                        STRING PREVIEW: <string name="sonido_duracion_preview">0:00</string>
                    -->
                    <TextView
                        android:id="@+id/tv_sonido_duracion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0:00"
                        android:textColor="#A0A0A0"
                        android:textSize="11sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Separador sutil -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yellow_sun"
            android:alpha="0.8"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="12dp" />

        <!-- ── Barra de progreso + tiempo ── -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!--
                STRING PREVIEW: <string name="sonido_tiempo_preview">0:00</string>
            -->
            <TextView
                android:id="@+id/tv_tiempo_actual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@color/text_dark_brown"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium"
                android:minWidth="32dp" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:progressTint="@color/sage_green"
                android:thumbTint="@color/sage_green"
                android:progressBackgroundTint="@color/yellow_sun" />

            <TextView
                android:id="@+id/tv_sonido_duracion_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:textColor="#A0A0A0"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium"
                android:minWidth="32dp"
                android:gravity="end" />

        </LinearLayout>

        <!-- ── Controles Play / Stop ── -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <!-- Botón Stop -->
            <ImageButton
                android:id="@+id/btn_stop"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@android:drawable/ic_media_previous"
                android:background="@drawable/bg_circle_decor_cream"
                android:tint="@color/text_dark_brown"
                android:contentDescription="Detener"
                android:layout_marginEnd="24dp" />

            <!-- Botón Play / Pausa (principal, más grande) -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_play_pausa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_play"
                app:backgroundTint="@color/sage_green"
                app:tint="#FDFBF7"
                app:fabSize="normal"
                app:elevation="4dp"
                android:contentDescription="Reproducir o pausar" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
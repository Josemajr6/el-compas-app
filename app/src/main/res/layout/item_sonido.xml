<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="18dp"
    app:cardBackgroundColor="#FDFBF7"
    app:cardCornerRadius="22dp"
    app:cardElevation="5dp"
    app:strokeColor="@color/yellow_sun"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ── Fila superior: portada + info ── -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Portada cuadrada con esquinas redondeadas -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:strokeWidth="0dp">

                <ImageView
                    android:id="@+id/iv_portada"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sonidos" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Info de la canción -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="14dp"
                android:paddingEnd="4dp">

                <!-- Línea decorativa -->
                <View
                    android:layout_width="30dp"
                    android:layout_height="3dp"
                    android:background="@color/sage_green"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_sonido_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sonido_titulo_preview"
                    android:textColor="@color/text_dark_brown"
                    android:textSize="16sp"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:lineSpacingMultiplier="1.1"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tv_sonido_artista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sonido_artista_preview"
                    android:textColor="@color/sage_green"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="3dp" />

                <!-- Fila categoría + duración -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:id="@+id/tv_sonido_categoria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sonido_categoria_preview"
                        android:textColor="#FDFBF7"
                        android:textSize="10sp"
                        android:fontFamily="sans-serif-medium"
                        android:textAllCaps="true"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:background="@drawable/bg_badge_video" />

                    <TextView
                        android:id="@+id/tv_sonido_duracion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/sonido_duracion_preview"
                        android:textColor="#A0A0A0"
                        android:textSize="11sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yellow_sun"
            android:alpha="0.8"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="10dp" />

        <!-- ── Barra de progreso + tiempos ── -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_tiempo_actual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sonido_tiempo_preview"
                android:textColor="@color/text_dark_brown"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium"
                android:minWidth="34dp" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:progressTint="@color/sage_green"
                android:thumbTint="@color/sage_green"
                android:progressBackgroundTint="@color/yellow_sun" />

            <TextView
                android:id="@+id/tv_sonido_duracion_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sonido_duracion_preview"
                android:textColor="#A0A0A0"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium"
                android:minWidth="34dp"
                android:gravity="end" />

        </LinearLayout>

        <!-- ── Controles: Anterior · Play/Pausa · Siguiente ── -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp">

            <!-- Botón Anterior -->
            <ImageButton
                android:id="@+id/btn_anterior"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@android:drawable/ic_media_previous"
                android:background="@drawable/bg_circle_decor_cream"
                android:tint="@color/text_dark_brown"
                android:contentDescription="@string/sonido_cancion_anterior_desc"
                android:layout_marginEnd="20dp" />

            <!-- Botón Play / Pausa -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_play_pausa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_play"
                app:backgroundTint="@color/sage_green"
                app:tint="#FDFBF7"
                app:fabSize="normal"
                app:elevation="4dp"
                android:contentDescription="@string/sonido_reproducir_pausar_desc" />

            <!-- Botón Siguiente -->
            <ImageButton
                android:id="@+id/btn_siguiente"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@android:drawable/ic_media_next"
                android:background="@drawable/bg_circle_decor_cream"
                android:tint="@color/text_dark_brown"
                android:contentDescription="@string/sonido_cancion_siguiente_desc"
                android:layout_marginStart="20dp" />

        </LinearLayout>

        <!-- ── Control de volumen ── -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/ic_lock_silent_mode"
                android:scaleType="fitCenter"
                android:tint="@color/sage_green"
                android:alpha="0.8"
                android:contentDescription="@string/video_volumen_bajo_desc" />

            <SeekBar
                android:id="@+id/seekBarVolumen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:max="100"
                android:progress="80"
                android:progressTint="@color/sage_green"
                android:thumbTint="@color/tile_coral"
                android:progressBackgroundTint="@color/yellow_sun" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_lock_silent_mode_off"
                android:scaleType="fitCenter"
                android:tint="@color/sage_green"
                android:alpha="0.8"
                android:contentDescription="@string/video_volumen_alto_desc" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
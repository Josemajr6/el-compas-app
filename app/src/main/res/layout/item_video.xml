<?xml version="1.0" encoding="utf-8"?>
<!--
    ═══════════════════════════════════════════════════════════════
    ITEM VÍDEO
    Cada tarjeta contiene:
      · Thumbnail / PlayerView de ExoPlayer con controles nativos
      · Título del vídeo
      · Descripción breve
    Sigue la estética de item_personaje.xml
    ═══════════════════════════════════════════════════════════════
-->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="18dp"
    app:cardBackgroundColor="#FDFBF7"
    app:cardCornerRadius="22dp"
    app:cardElevation="5dp"
    app:strokeColor="@color/yellow_sun"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ── Player / Thumbnail container ── -->
        <FrameLayout
            android:id="@+id/fl_player_container"
            android:layout_width="0dp"
            android:layout_height="210dp"
            android:background="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Thumbnail (visible antes de reproducir) -->
            <ImageView
                android:id="@+id/iv_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/videos" />

            <!-- ExoPlayer PlayerView (ocupa todo el container) -->
            <androidx.media3.ui.PlayerView
                android:id="@+id/player_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:resize_mode="fit"
                app:use_controller="true"
                app:show_timeout="4000"
                app:controller_layout_id="@layout/exo_player_control_view"
                app:surface_type="surface_view" />

            <!-- Botón Play superpuesto sobre el thumbnail -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_media_play"
                app:backgroundTint="@color/tile_coral"
                app:tint="#FDFBF7"
                app:fabSize="normal"
                app:elevation="6dp" />

            <!-- Badge "HD" decorativo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="10dp"
                android:text="HD"
                android:textColor="#FDFBF7"
                android:textSize="10sp"
                android:textStyle="bold"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/bg_badge_video" />

        </FrameLayout>

        <!-- ── Bloque de texto ── -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="14dp"
            android:paddingBottom="18dp"
            app:layout_constraintTop_toBottomOf="@id/fl_player_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Línea decorativa (igual que en personajes) -->
            <View
                android:layout_width="36dp"
                android:layout_height="3dp"
                android:background="@color/tile_coral"
                android:layout_marginBottom="10dp" />

            <!-- Título del vídeo -->
            <TextView
                android:id="@+id/tv_video_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Título del vídeo"
                android:textColor="@color/text_dark_brown"
                android:textSize="18sp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:lineSpacingMultiplier="1.1" />

            <!-- Duración / categoría -->
            <TextView
                android:id="@+id/tv_video_duracion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00 · Categoría"
                android:textColor="@color/tile_coral"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.06"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="8dp" />

            <!-- Descripción -->
            <TextView
                android:id="@+id/tv_video_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción del vídeo"
                android:textColor="#6B5050"
                android:textSize="13.5sp"
                android:lineSpacingMultiplier="1.55"
                android:fontFamily="sans-serif" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
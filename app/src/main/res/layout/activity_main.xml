<?xml version="1.0" encoding="utf-8"?>
<!--
    ═══════════════════════════════════════════════════════════════
    ACTIVITY MAIN — Bottom Nav rediseñada
    ───────────────────────────────────────────────────────────────
    Diseño: píldora flotante con indicador animado de selección.
    Iconos vectoriales personalizados, sin PNGs de baja resolución.
    Paleta: albero_cream · sage_green · tile_coral · yellow_sun
    ═══════════════════════════════════════════════════════════════
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Contenedor de fragmentos — ocupa toda la pantalla -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ══════════════════════════════════════════════════
         BOTTOM NAV — píldora flotante
         ══════════════════════════════════════════════════ -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/nav_card"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/albero_cream"
        app:cardCornerRadius="36dp"
        app:cardElevation="24dp"
        app:strokeColor="@color/yellow_sun"
        app:strokeWidth="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!--
            LinearLayout horizontal con 5 botones personalizados.
            Cada botón es un LinearLayout (icono + punto indicador).
            El punto solo es visible en el ítem seleccionado.
        -->
        <LinearLayout
            android:id="@+id/nav_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <!-- ── NAV: INICIO ──────────────────────────────── -->
            <LinearLayout
                android:id="@+id/nav_btn_inicio"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/nav_inicio">

                <ImageView
                    android:id="@+id/nav_icon_inicio"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_nav_inicio"
                    android:scaleType="fitCenter" />

                <!-- Punto indicador activo -->
                <View
                    android:id="@+id/nav_dot_inicio"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/nav_dot_active"
                    android:visibility="visible" />

            </LinearLayout>

            <!-- ── NAV: PERSONAJES ──────────────────────────── -->
            <LinearLayout
                android:id="@+id/nav_btn_personajes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/nav_personajes">

                <ImageView
                    android:id="@+id/nav_icon_personajes"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_nav_personajes"
                    android:scaleType="fitCenter" />

                <View
                    android:id="@+id/nav_dot_personajes"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/nav_dot_active"
                    android:visibility="invisible" />

            </LinearLayout>

            <!-- ── NAV: VÍDEOS — botón central destacado ──── -->
            <!--
                El botón central lleva un fondo de círculo sage_green
                para que destaque como acción principal, estilo FAB.
            -->
            <LinearLayout
                android:id="@+id/nav_btn_videos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/nav_videos">

                <!-- Círculo elevado para el botón central -->
                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp">

                    <!-- Fondo circular -->
                    <View
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/nav_center_bg" />

                    <ImageView
                        android:id="@+id/nav_icon_videos"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_nav_videos"
                        android:scaleType="fitCenter" />

                </FrameLayout>

                <View
                    android:id="@+id/nav_dot_videos"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/nav_dot_active"
                    android:visibility="invisible" />

            </LinearLayout>

            <!-- ── NAV: SONIDOS ─────────────────────────────── -->
            <LinearLayout
                android:id="@+id/nav_btn_sonidos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/nav_sonidos">

                <ImageView
                    android:id="@+id/nav_icon_sonidos"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_nav_sonidos"
                    android:scaleType="fitCenter" />

                <View
                    android:id="@+id/nav_dot_sonidos"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/nav_dot_active"
                    android:visibility="invisible" />

            </LinearLayout>

            <!-- ── NAV: ANIMACIONES ─────────────────────────── -->
            <LinearLayout
                android:id="@+id/nav_btn_animaciones"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/nav_animaciones">

                <ImageView
                    android:id="@+id/nav_icon_animaciones"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_nav_animaciones"
                    android:scaleType="fitCenter" />

                <View
                    android:id="@+id/nav_dot_animaciones"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/nav_dot_active"
                    android:visibility="invisible" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>